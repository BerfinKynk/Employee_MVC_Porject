@model ASPNETMVCCRUD.Models.UpdateEmployeeViewModle
    

@{
}
<h1>Edit Employee</h1>
<form method="post" action="View" class="mt-5">
    <div class="mb-3" style="color: violet">
        <label for="" class="form-label" style="color: aquamarine">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3" style="color: violet">
        <label for="" class="form-label" style="color: aquamarine">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3" style="color: violet">
        <label for="" class="form-label" style="color: aquamarine">Email Address</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>
    <div class="mb-3" style="color: violet">
        <label for="" class="form-label" style="color: aquamarine">Salary</label>
        <input type="number" class="form-control" asp-for="Salary">
    </div>
    <div class="mb-3" style="color: violet">
        <label for="" class="form-label" style="color: aquamarine">Date Of Birth</label>
        <input type="date" class="form-control" asp-for="DateOfBirth">
    </div>
    <div class="mb-3" style="color: violet">
        <label for="" class="form-label" style="color: aquamarine">Department</label>
        <input type="text" class="form-control" asp-for="Department">
    </div>

    <button type="submit" class="btn btn-primary"></button>
    <button type="submit" class="btn btn-danger"
    asp-action="Delete"
    asp-controller="Employee">Delete</button>
</form>
